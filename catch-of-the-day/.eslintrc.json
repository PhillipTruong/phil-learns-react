{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": ["error", "only-multiline"],
        "react/prop-types": 0,
        "react/no-unescaped-entities": 0,
        "quotes": ["error", "single", { "avoidEscape": true }]
    }

}
